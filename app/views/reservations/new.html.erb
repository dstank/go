<div class="modal-header">
   	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
   	<h3 id="myModalLabel">Rezervisi novi termin</h3>
</div>
<div class="modal-body">
	<%= form_tag nurse_reservations_path(@nurse.id), :method => 'POST' do%>
		<input type="text" name="first_name" placeholder="Ime" />
		<input type="text" name="last_name" placeholder="Prezime" />
		<input type="text" name="birthday" placeholder="Godiste" />
		<input type="text" name="phone" placeholder="Telefon" />
		<input type="text" name="reservation_date_1" placeholder="Datum rezervacije" value="<%=@reservation_date%>" disabled />
		<input type="hidden" name="reservation_date" placeholder="Datum rezervacije" value="<%=@reservation_date%>" />
		<select name="doctor_id">
			<% @doctors.each do |doctor| %>
				<option value="<%=doctor.id%>" <%="selected" if @doctor_id.to_i == doctor.id.to_i%>><%=doctor.full_name%></option>
			<% end %>
		</select>
		<select name="examination_id">
			<option value="-1">Izaberi vrstu pregleda</option>
			<% @examinations.each do |examination| %>
				<option value="<%=examination.id%>"><%=examination.name%></option>
			<% end %>
		</select>
		<select name="examination_time_id">
			<option value="-1">Izaberi termin pregleda</option>
			<% @examination_times.each do |et| %>
				<option value="<%=et.id%>"><%=et.examination_time%></option>
			<% end %>
		</select>
		<button class="btn btn-primary" type="submit">Kreiraj</button>
	<% end %>
</div>