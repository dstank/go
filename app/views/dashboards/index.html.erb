<h4>Lista rezervacija</h4>
<table class="table">
	<tr>
		<th>Ime</th>
		<th>Prezime</th>
		<th>Godiste</th>
		<th>Vrsta pregleda</th>
		<th>Doktor</th>
		<th>Vrijeme</th>
		<th>Sestra</th>
		<th>Izmjeni</th>
		<th>Obrisi</th>
	</tr>
	<% @reservations.each do |reservation| %>
		<% if reservation[:reservation].blank? %>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td><%= reservation[:examination_time].examination_time %></td>
				<td></td>
				<td><a data-toggle="modal" data-target="#myModal" href="<%=new_nurse_reservation_path(@nurse.id, {:doctor_id => @doctor_id, :selected_date => @selected_date, :examination_time => reservation[:examination_time].id})%>">Rezervisi</a></td>
				<td></td>
			</tr>
		<% else %>
			<tr>
				<td><%= reservation[:reservation].first_name %></td>
				<td><%= reservation[:reservation].last_name %></td>
				<td><%= reservation[:reservation].birthday %></td>
				<td><%= reservation[:reservation].examination.name %></td>
				<td><%= reservation[:reservation].doctor.full_name %></td>
				<td><%= reservation[:examination_time].examination_time %></td>
				<td>Glavna sestra</td>
				<td><a data-toggle="modal" data-target="#myModal" href="<%=edit_nurse_reservation_path(@nurse.id, reservation[:reservation].id)%>">Izmjeni</a></td>
				<td><a href="<%=nurse_reservation_path(@nurse.id, reservation[:reservation].id)%>" data-method="DELETE"><span class="icon-remove-sign"></span></a></td>
			</tr>
		<% end %>
	<% end %>
</table>
<script>
	$("#reservation_path").attr("href", "<%=new_nurse_reservation_path(@nurse.id, {:doctor_id => @doctor_id, :selected_date => @selected_date}).html_safe%>");
</script>